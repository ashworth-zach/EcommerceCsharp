<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">

</head>
<style>
    img{
        height: 100px;
        width: 100px;
        display: inline-block;
    }
    div.row{
        display: inline-block;
    }
    .quantity{
        display: inline-block;
    }
    </style>
<body>
    <h1 class="jumbotron text-center bg-light">Dashboard | <a href="/products">Products</a> | <a href="/orders">Orders</a> | <a href="/customers">Customers</a> | <a href="/settings">Settings (coming soon)</a></h1>
    <a href="/">HOME</a>
    <div class="container">
        @foreach(var product in ViewBag.Products){
            <div class="row col-sm-2">
                <img src="@product.image" alt="@product.description">
                <p class="quantity">@product.quantity left</p>
            </div>
            }<br>

            <a class="text-center" href="/products">See All...</a>
            @foreach(var prod in ViewBag.Products){
                @foreach(var order in prod.orders){
                    <p>@order.user.firstname bought @order.quantity @prod.name (@order.GetTimeSpan()) hours ago</p>
                }
            }<br>
            <a href="/orders">See All...</a>
            @foreach (var user in ViewBag.LatestUsers){
                <p>User @user.firstname @user.lastname joined (@user.GetTimeSpan()) hours ago</p>
            }
            <a class="text-center" href="/customers">See All...</a>
    </div>
</body>

</html>